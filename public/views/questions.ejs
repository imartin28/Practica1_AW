<!DOCTYPE html>
	<html lang="es">
	<head>
		<title>FaceBluff</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link href="/css/style.css" rel="stylesheet" media="screen"/>
        <link rel="icon" type="image/png" href="imagenes/logo.png"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    </head>
    <body class="fondo">
            <div>
                <%- include("header") %>
                <%- include("nav") %>
                
                <div class="titulo-pagina">Preguntas seleccionadas aleatoriamente</div>

                <div class="panel-listado-preguntas">
                    <div class= "panel-boton-crear-pregunta">
                        <a href="create_new_question" class="boton-crear-pregunta contenido-centrado"> Crear nueva pregunta</a>
                    </div>
                    <div class="listado-preguntas">
                        <%  if(questions.length != 0){ %>
                            <% questions.forEach(question =>{ %>
                                <div class="pregunta-aleatoria">
                                    <p><%= question %></p>
                                </div>
                            <% }); %>    
                        <% }else{ %>
                            <p>No hay preguntas!</p>
                        <% } %>
                    </div>
                    
                </div>              
            </div>        

    </body>

 </html>