<!DOCTYPE html>
	<html lang="es">
	<head>
		<title>FaceBluff</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link href="/css/style.css" rel="stylesheet" media="screen"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>

    <body class="fondo">
            <div>
                <%- include("header") %>
                <%- include("nav") %>
                
                <div id="titulo-pagina-preguntas-aleatorias" class="titulo-pagina">Preguntas seleccionadas aleatoriamente</div>
                <%- include("flash") %>
                <div class="panel-listado-preguntas">
                    <div class= "panel-boton-crear-pregunta">
                        <a href="create_new_question" class="boton-crear-pregunta contenido-centrado"> Crear nueva pregunta</a>
                    </div>
                    <div class="listado-preguntas">
                        <%  if (questions.length != 0) { %>
                            <% questions.forEach(question =>{ %>
                                <form method="POST" action="one_question" class="pregunta-aleatoria">
                                    <input type="hidden" value="<%= question.id %>" name="id_question">
                                    <button type="submit" class="boton-enunciado-pregunta" name="text_question" value="<%= question.text %>"><%= question.text %></button>
                                </form>
                            <% }); %>    
                        <% } else { %>
                            <p>No hay preguntas!</p>
                        <% } %>
                    </div>
                    
                </div>              
            </div>        

    </body>

 </html>