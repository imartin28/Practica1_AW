<!DOCTYPE html>
	<html lang="es">
	<head>
		<title>FaceBluff</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link href="/css/style.css" rel="stylesheet" media="screen"/>
        <link rel="icon" type="image/png" href="imagenes/logo.png"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    </head>
    <body class="fondo">
            <div>
                <div class="header">
                    <div class="logo"> </div>  
                    <div class="informacion-nav">
                        <div class="panel-izq-nav-imagen">
                                <% if (profile_img) { %>                        
                                    <img class="imagen-perfil-header" src="/users/profile_img/<%= profile_img %>">                  
                              
                                <% } %>
                        </div>
                        <div class="panel-der-nav-datos">
                           <span class="puntuacion">Puntos: <%= points %></span>
                           <a class="boton-desconectar contenido-centrado" href="logout">Desconectar</a>
                        </div>
                     </div>
                </div>
                
                <div class ="nav">
                    <a href="#">Perfil</a>
                    <a href="friends">Amigos</a>
                    <a href="#">Preguntas</a>
                </div>
                <div class="paginaPerfil-titulo">Resultados de b√∫squeda : <%= searchText %></div>

                <div class="panel-perfil">           
                    <div class="perfil-contenido">
                            <% users.forEach(user => { %> 
                                <% if (user.email != userEmail) { %>
                                    
                                      <form method="POST" action="new_friend_request" class="info-amigo-busqueda">
                                        <img class="fotoPerfilAmigo" src="/users/profile_img/<%= user.profile_img %>">
                                        <span class="nombre-amigo contenido-centrado"><%= user.name %></span>
                                        <input type="hidden" value="<%= user.email %>" name="emailDestination">
                                        <button type="submit" class="botonSolicitudAmistad contenido-centrado">Solicitar amistad</button> 
                                      </form>
                                    
                                <% } else if (users.length == 1) { // el caso en que devuelve solo el usuario de la sesion %>  
                                    <h4 class="infoAmigo">No se han encontrado resultados</h4>
                                <% } %> 
                            <% }); %>
                            

                    </div>
                </div>              
            </div>        

    </body>

 </html>