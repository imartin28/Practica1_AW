<!DOCTYPE html>
	<html lang="es">
	<head>
		<title>FaceBluff</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link href="/css/style.css" rel="stylesheet" media="screen"/>
        <link rel="icon" type="image/png" href="imagenes/logo.png"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    </head>
    <body class="fondo">
            <div>
                <%- include("header") %>
                <%- include("nav") %>
               
                <div class="paginaPerfil-titulo">Resultados de b√∫squeda : <%= searchText %></div>

                <div class="panel-perfil">           
                    <div class="perfil-contenido">
                        <% if (users.length > 0) { %> 
                            <% users.forEach(user => { %>         
                                <form method="POST" action="new_friend_request" class="info-amigo-busqueda">
                                    <img class="fotoPerfilAmigo" src="/users/profile_img/<%= user.profile_img %>">
                                    <span class="nombre-amigo contenido-centrado"><%= user.name %></span>
                                    <input type="hidden" value="<%= user.email %>" name="emailDestination">
                                    <button type="submit" class="botonSolicitudAmistad contenido-centrado">Solicitar amistad</button> 
                                </form>
                            <% }); %>    
                        <% } else {  %>
                            <h2 class="no-resultados-busqueda-amigos">No se han encontrado resultados</h2>
                        <% } %> 
                    </div>
                </div>              
            </div>        

    </body>

 </html>